                <metro2:CallMethodButton x:Name="funcbtn_2014AkiEvent" Content="発動！渾作戦" VerticalAlignment="Top" Height="50" FontSize="24" Click="CallMethodButton_Click_4" Grid.Column="1" Visibility="Hidden" IsEnabled="False"/>
