									 Grid.Row="1"
									 Text="{Binding TargetExp, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
									 Prompt=""
									 Padding="2"
									 Margin="8"
									 MinWidth="70"
									 HorizontalAlignment="Left"
									 IsReadOnly="True" />
